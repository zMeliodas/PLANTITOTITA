<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PLANTITOOffWhite"
        tools:context=".loginmodule.RegistrationPage">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAlignment="center" android:fontFamily="@font/mada_black"
            android:textColor="@color/PLANTITODarkGreen" android:textSize="48sp"
            android:id="@+id/signUpTitle"
            android:contextClickable="false"
            android:textColorHighlight="@color/black"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp" android:layout_marginStart="24dp"/>

    <Button
            android:layout_width="44dp"
            android:layout_height="39dp" android:id="@+id/btnReturn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:onClick="onClickReturn"
            android:background="@drawable/resource_return" android:layout_marginTop="13dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="Welcome to Plantitotita!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mada_medium"
            android:textSize="20sp"
            android:textColor="@color/PLANTITODarkGreen"
            app:layout_constraintTop_toBottomOf="@+id/signUpTitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="24dp" android:id="@+id/textView2"/>

    <TextView
            android:text="Let's create your account!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mada_medium"
            android:textSize="20sp"
            android:textColor="@color/PLANTITODarkGreen"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginStart="24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_shape"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp">
        
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:id="@+id/regScroll"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                <TextView
                        android:text="@string/NameTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/regNameTxtView"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp"
                        android:layout_marginStart="40dp"/>
                <EditText
                        android:layout_width="320dp"
                        android:layout_height="70dp"
                        android:id="@+id/editTxtName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:inputType="textCapSentences"
                        android:maxLength="250"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_button_white"
                        android:layout_marginTop="1dp"
                        android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                        android:paddingStart="25dp" android:paddingEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/regNameTxtView"/>


                <TextView
                        android:text="@string/EmailTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/regEmailTxtView"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="135dp"
                        android:layout_marginStart="40dp"/>

                <EditText
                        android:layout_width="320dp"
                        android:layout_height="70dp"
                        android:id="@+id/editTxtEmailAddress"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:inputType="text|textEmailAddress"
                        android:hint="example23@gmail.com"
                        android:maxLength="250"
                        android:textColorHint="#8B424443"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_button_white"
                        android:layout_marginTop="1dp"
                        android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                        android:paddingStart="25dp" android:paddingEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/regEmailTxtView"/>

                <TextView
                        android:text="@string/MobileNumTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/regMobileNumTxtView"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="240dp"
                        android:layout_marginStart="40dp"/>

                <LinearLayout
                        android:id="@+id/phoneLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/regMobileNumTxtView">

                    <com.hbb20.CountryCodePicker
                            android:id="@+id/countryCodePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:ccp_showNameCode="false"
                            app:ccp_autoDetectCountry="true"
                            app:ccp_autoFormatNumber="true"
                            app:ccpDialog_keyboardAutoPopup="false"
                            app:ccp_rememberLastSelection="true"
                            app:ccp_countryPreference="PH"
                            app:ccpDialog_allowSearch="true"
                            app:ccp_contentColor="@color/PLANTITOOffWhite"
                            app:ccpDialog_searchEditTextTint="@color/PLANTITOOffWhite"
                            app:ccpDialog_backgroundColor="@color/PLANTITOdarkgreen"
                            app:ccpDialog_textColor="@color/PLANTITOOffWhite"
                            app:ccpDialog_fastScroller_bubbleColor="@color/PLANTITOOffWhite"
                            app:ccpDialog_fastScroller_bubbleTextAppearance="@font/mada_black"
                            app:ccpDialog_fastScroller_handleColor="@color/PLANTITOOffWhite"
                            android:layout_marginTop="15dp"
                            app:ccp_textSize="16dp">
                    </com.hbb20.CountryCodePicker>

                    <EditText
                            android:layout_width="210dp"
                            android:layout_height="70dp"
                            android:id="@+id/editTxtMobileNumber"
                            android:inputType="text|phone|number"
                            android:maxLength="12"
                            android:textColorHint="#8B424443"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/custom_button_white"
                            android:layout_marginTop="1dp"
                            android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                            android:paddingStart="25dp" android:paddingEnd="15dp"/>

                </LinearLayout>

                <TextView
                        android:text="@string/PasswordTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/regPasswordTxtView"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="345dp"
                        android:layout_marginStart="40dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#A5A5A5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/regPasswordTxtView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="-8dp">

                    <EditText
                            android:layout_width="320dp"
                            android:layout_height="70dp"
                            android:id="@+id/editTxtPassword"
                            android:inputType="text|textPassword"
                            android:background="@drawable/custom_button_white"
                            android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                            android:paddingStart="25dp" android:paddingEnd="15dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="@string/ConfirmPasswordTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/regConfirmPasswordTxtView"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="450dp"
                        android:layout_marginStart="40dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/editTxtConfirmPasswordToggle"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#A5A5A5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/regConfirmPasswordTxtView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="-8dp">

                    <EditText
                            android:layout_width="320dp"
                            android:layout_height="70dp"
                            android:id="@+id/editTxtConfirmPassword"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:inputType="text|textPassword"
                            android:background="@drawable/custom_button_white"
                            android:textSize="20sp" android:textColor="@color/black" android:fontFamily="@font/mada_medium"
                            android:paddingStart="25dp" android:paddingEnd="15dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/editTxtConfirmPasswordToggle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/mada_medium"
                        android:textSize="14sp"
                        android:textColor="@color/PLANTITOOffWhite"
                        android:id="@+id/termsAndPolicies"
                        android:gravity="center"
                        android:onClick="onClickTermsAndPrivacyPolicy"
                        android:text="By clicking Create Account, you agree to our \nTerms and Privacy Policy">

                </TextView>

                <Button
                        android:text="Create Account"
                        android:layout_width="161dp"
                        android:layout_height="68dp"
                        app:layout_constraintTop_toBottomOf="@+id/termsAndPolicies" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@id/textViewHaveAnAcc"
                        android:id="@+id/btnCreateAccount" android:background="@drawable/custom_button_yellow"
                        android:fontFamily="@font/mada_black" android:textAllCaps="false" android:textSize="16sp"
                        android:onClick="onClickCreateAccount"
                        android:textColor="@color/PLANTITODarkGreen"
                        android:layout_marginBottom="80dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/or"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintTop_toBottomOf="@id/btnCreateAccount"
                          android:text="─────── or ───────"
                          android:layout_marginTop="10dp"
                          android:textSize="24sp"
                          android:fontFamily="@font/mada_medium"
                          android:textColor="@color/PLANTITOOffWhite"/>

                <com.shobhitpuri.custombuttons.GoogleSignInButton
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnGoogleSignUp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/or"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:text="@string/google_sign_up"/>

                <Button
                        android:text="Have an account?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textViewHaveAnAcc"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/PLANTITOOffWhite" app:layout_constraintTop_toBottomOf="@+id/btnGoogleSignUp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnSignIn1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="30dp"
                        android:textAllCaps="false"
                        android:background="#00FFFFFF" android:clickable="false"/>

                <Button
                        android:text="Sign In"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/btnSignIn1"
                        android:fontFamily="@font/mada_medium" android:textSize="20sp"
                        android:textColor="@color/PLANTITOStrongYellow" app:layout_constraintTop_toTopOf="@+id/textViewHaveAnAcc"
                        app:layout_constraintBottom_toBottomOf="@id/textViewHaveAnAcc"
                        app:layout_constraintStart_toEndOf="@id/textViewHaveAnAcc"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="-80dp"
                        android:onClick="onClickSignIn1"
                        android:textAllCaps="false" android:background="#00FFFFFF"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>