<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="135dp"
            android:layout_height="120dp"
            android:id="@+id/layoutDialog"
            android:background="@drawable/custom_container_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/getStartedContainerIcon"
                android:onClick="onClickHome"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/get_started_plant_gallery_icon_dummy">
        </Button>

        <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/plantIDName"
                app:layout_constraintTop_toBottomOf="@id/getStartedContainerIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Exploring Plant Information"
                android:textAlignment="center"
                android:fontFamily="@font/mada_medium"
                android:textSize="12sp" android:textColor="@color/PLANTITOyellow"
                app:layout_constraintEnd_toEndOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>