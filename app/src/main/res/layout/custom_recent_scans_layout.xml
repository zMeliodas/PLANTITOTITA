<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:id="@+id/layoutDialog"
            android:background="@drawable/custom_container_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/roundedCorners2"
                android:layout_width="280dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:id="@+id/plantGalleryContainerImgView"
                android:adjustViewBounds="true"
                android:src="@drawable/sad"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/plantIDName"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Anahaw (Saribus rotundifolius)"
                android:textAlignment="textStart"
                android:fontFamily="@font/mada_medium"
                android:textSize="18sp" android:textColor="@color/PLANTITODarkGreen"
                app:layout_constraintEnd_toEndOf="parent">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>