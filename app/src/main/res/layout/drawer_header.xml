<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/PLANTITODarkGreen"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="110dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/navDrawerImageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_circle"
            app:civ_border_color="@color/PLANTITODarkGreen"
            app:civ_border_width="2dp"
            android:backgroundTint="@color/PLANTITOOffWhite">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
            android:id="@+id/navDrawerDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meliodas"
            android:fontFamily="@font/mada_medium"
            android:textSize="24sp"
            android:textColor="@color/PLANTITOOffWhite"
            android:layout_marginStart="105dp"
            android:layout_marginTop="-55dp">
    </TextView>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View profile"
            android:fontFamily="@font/mada_medium"
            android:onClick="onClickViewProfile"
            android:textSize="16sp"
            android:textColor="@color/PLANTITOStrongYellow"
            android:layout_marginStart="106dp"
            android:layout_marginTop="0dp">
    </TextView>
</LinearLayout>